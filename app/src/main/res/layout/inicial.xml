<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundo2cores"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="21dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="#fafafa"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Minha Coleção 2018"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/btMNacional"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/icmoedanacional"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btMEstrangeira"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/icmoedaestrangeira"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/btNotasBr"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/icnotabrasil"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btNotas"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/icnotas"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/btTMoedas"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/globo"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvMoedaNacional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moedas Brasil ="
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tvNotasNacional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notas Brasil ="
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tvMoedasTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moedas Total ="
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tvNotasTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notas Total ="
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tvColecaoTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colecao Total ="
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btNovo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_menu_composee"
                android:padding="20dp" />

            <Button
                android:id="@+id/btPesquisa"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_search"
                android:padding="20dp" />

            <Button
                android:id="@+id/btOpcoes"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/ic_build" />

        </LinearLayout>
        <TextView
        android:id="@+id/tvVersa"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>